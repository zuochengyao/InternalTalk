<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.megvii.dao.IUserDao">
	
	<sql id="T_User_Columns">u_id, u_username, u_password, u_type</sql>
	
	<resultMap id="T_User_ResultMap" type="com.megvii.model.User">
		<id column="u_id" property="id" jdbcType="INTEGER"/>
		<result column="u_username" property="username" jdbcType="VARCHAR"/>
		<result column="u_password" property="password" jdbcType="VARCHAR"/>
		<result column="u_type" property="type" jdbcType="TINYINT"/>
	</resultMap>
	
	<insert id="insert" parameterType="com.megvii.model.User">
		INSERT INTO t_user (u_username, u_password, u_type)
		VALUES (#{username}, #{password}, #{type});
	</insert>
	
	<!-- #{id, jdbcType=INTEGER} -->
	<delete id="delete" parameterType="java.lang.Integer">
		DELETE FROM t_user
		WHERE u_id = #{id};
	</delete>
	
	<update id="update" parameterType="com.megvii.model.User">
		UPDATE t_user
		SET u_username = #{username}, u_password = #{password}
		WHERE u_id = #{id}
	</update>
	
	<!--  resultMap="T_User_ResultMap"也可以 -->
	<select id="get" resultMap="T_User_ResultMap">
		SELECT *
		FROM t_user
		WHERE u_id = #{id};
	</select>
	
	<select id="login" parameterType="java.lang.String" resultMap="T_User_ResultMap">
		SELECT *
		FROM t_user
		WHERE u_username = #{username} and u_password = #{password};
	</select>
	
	<select id="getUserCount" resultType="java.lang.Integer">
		SELECT count(*)
		FROM t_user;
	</select>
	
	<select id="getUserList" resultMap="T_User_ResultMap">
		SELECT u_id, u_username, u_password, u_type
		FROM t_user
	</select>

</mapper>